{
  "name": "midnightway",
  "version": "1.0.0",
  "description": "Yet another astal-based wayland bar, dock, and panels",
  "main": "src/index.ts",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "NODE_OPTIONS=--experimental-transform-types rspack build",
    "dev": "BUILD_MODE=development pnpm build --mode development && LD_PRELOAD=\"$EXTERN_GTK4_LAYER_SHELL\" GSK_RENDERER=gl gjs -m dist/index.js",
    "dev:inspect": "pnpm dev --inspect",
    "generate": "pnpm run generate:clean && pnpm run generate:gir",
    "generate:clean": "rm -rf src/definitions/girs",
    "generate:gir": "ts-for-gir generate --outdir src/definitions/girs --ignoreVersionConflicts '*'",
    "lint": "eslint",
    "postinstall": "pnpm run generate",
    "watch": "nodemon --exec 'pnpm dev' --watch src -e ts,tsx",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "astal",
    "wayland"
  ],
  "author": "nenw <khi@nenw.dev>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@rspack/cli": "^1.1.8",
    "@rspack/core": "^1.1.8",
    "@styled/typescript-styled-plugin": "^1.0.1",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@svgr/webpack": "^8.1.0",
    "@ts-for-gir/cli": "4.0.0-beta.19",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@types/stylis": "^4.2.7",
    "@typescript-eslint/utils": "^8.19.1",
    "csstype": "^3.1.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-no-autofix": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  },
  "peerDependencies": {
    "astal": "extern:astal"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/hash": "^0.9.2",
    "@emotion/react": "^11.14.0",
    "@react-spring/web": "^9.7.5",
    "date-fns": "^4.1.0",
    "es-toolkit": "^1.31.0",
    "i18next": "^24.2.1",
    "lucide-react": "^0.474.0",
    "path-browserify": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.0",
    "stylis": "^4.3.4",
    "ts-pattern": "^5.6.0",
    "zod": "^3.24.1"
  }
}
