{
  "compilerOptions": {
    // Strictness
    // > `exactOptionalPropertyTypes` cannot be turn true, as it conflicts with astal
    "strict": true,
    "exactOptionalPropertyTypes": false,

    // Module / Resolution
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },

    // Types
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "types": ["node"],
    "typeRoots": [
      "./node_modules",
      "./node_modules/@types"
    ],

    // Others
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "composite": true,
    "plugins": [
      { "name": "@styled/typescript-styled-plugin" },
    ]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "eslint.config.js",
    "rspack.config.ts"
  ]
}
